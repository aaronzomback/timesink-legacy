    <div class="film-gallery-grid">

    <% @films.each do |film| %>

    <div class="film-item">

      <%= link_to film_path(film) do %>
        <div class="cover-img">
        <%= image_tag film.cover.gallery.url, :class => "cover_img" %>
        </div>

<div class="film-grid">
  <div class="title">
      <h3><%= film.title %></h3>
      <h3><%= film.description %></h3>
      <h3><%= film.author %></h3>
  </div>

<div class="parent-likes">

    <div class="like_count">
      <%= film.get_likes.size %>
    </div>



<% if film.liked_by @current_user %>
  <div> <%= link_to like_film_path(film, 'unlike'), :class => "upvoted", remote: true, method: :put do %>
      <%= image_tag "Polygon2.svg" %> </div>
  <% end %>
  <% else %>
<div class="">
  <%= link_to like_film_path(film, 'like'), :class => "upvote", remote: true, method: :put do %>
  <%= image_tag "Polygon2.svg" %>
</div>
<% end %>
<% end %>

</div>




</div>



        <% end %>

      </div>








  <% end %>
</div>



