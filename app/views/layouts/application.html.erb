console.log('barba is loaded');
</script>


<script>

  $(function() {
    $('.dropdown').click(function() { // when a .myDiv is clicked
      $('.dropdown').not(this).removeClass('dropdown-active')
      $(this).toggleClass('dropdown-active')
    })
  })

</script>


</body>

  </div>

