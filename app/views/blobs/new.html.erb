

<section class="log-in">



  <%= simple_form_for :blob, html: { class: "hide-required" }, url: blob_path do |f| %>
   <%= f.error_notification %>
  <%= f.input :email, placeholder: 'Enter your email' %>
  <%= f.input :password, placeholder: 'Enter your password', :class => "password_optional" %>
  <%= f.button :submit, "Sign in", :class => "sign-in-button" %>

  <% end %>


<div class="forgot-password">
    <p><%= link_to 'Forgot password?', new_password_reset_path %></p>
</div>

<div class="new-account">
    Not a member? <%= link_to "Join the sink", new_user_path, :class => "create-account" %>
</div>

</section>
