

div.forum-banner {
  margin-top: 0;
  background: url(<%= '/assets/forum.jpg' %>) no-repeat;
  filter: grayscale(50%);
  min-height: 100px;
  background-size: cover;
  background-position: 50% 75%;
  width: 100%;
}

.Forum-Post-Row {

  display: grid;
  margin-left: 80px;

  padding-top: 16px;
  padding-bottom: 16px;
  border-bottom: solid 0.1px white;
  border-top: solid 1px white;

  h6 span  {
    padding: 0;
    border-bottom: solid 1px white;
    display: inline;
    font-family: "Spectral-Light";
    margin: 0;
  }

p.date-post {
  display: flex;
    font-size: 10px;
    margin: 0;
    align-items: flex-start;
  }

  p.posted-by-forum {
    font-size: 12px;
  }

}

.new-forum-post img {
  display: block;
  margin: 24px 1000px 0;
}
