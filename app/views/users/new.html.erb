
<div class="join-the-sink">


<h3>Join the sink!</h3>

<%= simple_form_for @user do |f| %>
 <%= f.error_notification %>
  <%= f.input :name, placeholder: 'Enter your full name' %>
  <%= f.input :username, placeholder: 'Create a username' %>
  <%= f.input :email, placeholder: 'i.e. address@email.com' %>
  <%= f.input :avatar %>
  <%= f.input :password, placeholder: 'Enter password' %>
  <%= f.input :password_confirmation, placeholder: 'Confirm password' %>

<%= f.button :submit, "Join the sink" %>

<% end %>


<div class="already-sign-in">
 Already have an account? <%= link_to "Sign in", new_session_path, :class => "sign-in-from-new-account" %>
</div>

<div class="agree">
  By joining the sink, you agree to TimeSink's <br> <u>Terms</u> and <u>Privacy Policy</u>
</div>

</div>
