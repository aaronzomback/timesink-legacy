
<section>

<% if @current_user.submissions.present? %>

  <table id="user-submissions-table">
    <tr>
      <th>Film</th>
      <th>Current status</th>
      <th>Status update timestamp</th>
      <th>Date submitted</th>
    </tr>
       <% @current_user.submissions.order(created_at: :desc).each do |submission| %>
    <tr>
      <td id="submission-title">
        <%= link_to user_submission_path(submission) do %>
        <%= submission.title %>
        <% end %>
      </td>
      <td>
        <%= link_to user_submission_path(submission) do %>
        <%= submission.status %>
        <% end %>
      </td>
      <td>
        <%= link_to user_submission_path(submission) do %>
        <%= submission.updated_at.strftime("%H:%M UTC, %m-%d-%Y")%>
        <% end %>
      </td>
      <td>
        <%= link_to user_submission_path(submission) do %>
        <%= submission.created_at.strftime("%b %e, %Y") %>
        <% end %>
      </td>
    </tr>
        <% end %>
  </table>


  <% else %>


  <section style="width: 100%; height: 60vh;">


<h4 style="display: flex; justify-content: center; transform: translateY(6rem);">You don't have any active submissions...</h4>

  </section>

<% end %>


</section>
