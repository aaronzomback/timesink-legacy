<%= simple_form_for [@commentable, @comment], id: dom_id(@commentable, 'form'), class: 'display-none' do |form| %>
  <div class='field'>
    <%= form.text_area :body, placeholder: 'Add a comment', class: 'form-control', row: 4 %>
  </div>
  <div class='field'>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
