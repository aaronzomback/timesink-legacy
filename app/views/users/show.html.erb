
<section class="user-profile" style="height: 60vh;">
  <h2> <%= @user.name %></h2>

  <% if @user.avatar.present? %>
  <p><%= image_tag @user.avatar.show.url, :class => "avatar"%>
    <% else %>
    <p><%= image_tag @user.avatar.show.url, :class => "avatar_medium"%>
<% end %>

  <p><%= @user.location %></p>
  <p><%= @user.username %></p>
  <p><%= @user.email %></p>

<span><%= image_tag "Polygon2.svg", :class => "upvote-shape-profile" %></span>

  <% if (@user.sum(@user.review_likes, @user.comment_likes) === 0) %>
    <%= "0" %>
  <% else %>
    <%= @user.sum(@user.review_likes, @user.comment_likes) %>
  <% end %>

</section>
