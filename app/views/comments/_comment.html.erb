


<%= content_tag :div, id: dom_id(comment), class: 'comment' do %>

<% if comment.user.avatar.present? %>

  <span class="comment-avatar"><%= image_tag comment.user.avatar.thumbnail.url, class: "avatar" %> </span>

  <% end %>

    <%= link_to user_path(comment.user) do %>
    <span><strong><%= comment.user.username %></strong></span>
    <% end %>
    <p> <%= auto_link(simple_format(comment.body), html: { target: '_blank' }) %></p>

    <div class="liking-target">
    <%= link_to like_comment_path(comment), class: "upvoted {liked_or_not}", remote: true, method: :put do %>
   <%= image_tag "Polygon2.svg" %>
     <% end %>
      <span id="js2-<%= comment.id %>">
       <%= comment.get_likes.size %>
     </span>

       </div>




  <div class='links'><small>
    <%= link_to 'Reply', [:new, comment, :comment], remote: true %>
    <% if @current_user == comment.user %>
       <span class="comment-actions">
         <% if comment.created_at > 1.hour.ago %>
          <%= link_to 'Edit', [:edit, comment.commentable, comment]%>
          <%= link_to 'Delete', [comment.commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
       </span>
    <% end %>
  </small></div>

  <%= render 'comments/form', commentable: comment, comment: Comment.new %>
  <%= render comment.comments.order("created_at desc")  %>
<% end %>
