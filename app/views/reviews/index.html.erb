
<div class="back-to-films">
  <%= link_to film_path(@film) do %>
  <span><%= image_tag "BackArrow1.svg" %> </span> <h3>Back to <%= @film.title %> </h3>
  <% end %>
</div>


<%= link_to new_film_review_path(@film) do %>
<div class="write-review-button">
  Write a review
</div>
<% end %>

<% @film.reviews.order("created_at desc").each do |review| %>


  <div class="review">
      <%= link_to film_review_path(@film, review) do %>
    <p><%= review.title %> </p>
    <% end %>

<div class="">
  <% if review.comments.present? %>
  <p class="review-comment-count"><%= pluralize review.comments.count, "Comment" %></p>
  <% else %>
  <p class="review-comment-count">no comments yet</p>
  <% end %>
</div>




      <p class="posted">
        <small>Published by
          <% if review.user.avatar.thumbnail.url.present? %>
        <span>  <%= image_tag review.user.avatar.thumbnail.url, :class => "avatar" %></span>
        <% end %>
        <%= link_to review.user.username, user_path(review.user) %> <%= time_ago_in_words(review.created_at) %> ago</small>
          </p>

    </div>

    <div>
    <%= link_to like_review_path(review), class: "upvoted {liked_or_not}", method: :put, remote: :true do %>
   <%= image_tag "Polygon2.svg" %>
     <% end %>
     <span id="js3-<%= review.id %>">
       <%= review.get_likes.size %>
     </span>

       </div>



      <% end %>
