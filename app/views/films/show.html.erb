<%= render "shared/ticker" %>




<div class="back-to-films">
  <%= link_to films_path do %>
  <i class="arrow left"></i>
  <h3>Back to film gallery</h3>
  <% end %>
</div>


<section class="film-show-grid">

    <div class="film-show-img" onclick="myFunction()" >
  <%= image_tag @film.cover.show.url %>
  </div>

  <div class="film-show-info">
    <div class="">
      <%= @film.title %> <br>
      <%= @film.author %> <br>
      <%= @film.description %> <br>
    </div>
    <div class="">
      <% if @film.is_top_pick %>
      <div class="show-page">
        <%= image_tag "is_featured.svg" %>
      </div>
      <% end %>
    </div>

  </div>

</section>


              <div class="film">
                <span class="popupfilm">
                  <%= video_tag @film.video_url.to_s, :size => "640x480", :controls =>true, :id => "filmPopUp" %>
                  <%= image_tag "close.svg" %>
                </span>
              </div>



<%= image_tag "cornerreviews2.svg", :class => "cornercafereview" %>

<% @film.reviews.order("created_at desc").each do |review| %>


  <div class="review">
      <%= link_to film_review_path(@film, review) do %>
    <h6 class="review-title"><%= review.title %></h6>
    <% end %>

    <div class="review-details">
      <p> Rating <%= review.score %> / 5</p>


      <p class="posted">
        <small>Published by

        <%= link_to review.user.username, user_path(review.user) %> <%= time_ago_in_words(review.created_at) %> ago</small>
          </p>

    </div>

  </div>

      <% end %>


      <%= link_to new_film_review_path(@film) do %>
      <%= image_tag "post.svg" %>
      <% end %>



                  <script>
                    // When the user clicks on div, open the popup
                  function myFunction() {
                    var popup = document.getElementById("filmPopUp");
                    popup.classList.toggle("show");
                  }
                  </script>
