<!DOCTYPE html>
<html>
<head>
  <title>TimeSink</title>
<%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="a cinema and multimedia arts platform">
  <meta name="keywords" content="films, cinema, TimeSink, timesink">
  <link href="https://vjs.zencdn.net/7.8.4/video-js.css" rel="stylesheet" />
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'barba' %>
      <%= javascript_pack_tag 'barba-css' %>

        <script src="https://js.stripe.com/v3/"></script>

  <%= favicon_link_tag asset_path('Group1033.png') %>

<script src="//vjs.zencdn.net/ie8/1.1.1/videojs-ie8.min.js" async></script>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Roboto">

  </head>

  <div class="body">

  <body data-barba="wrapper">

    <div class="content">


<header>

  <%= link_to main_app.root_path do %>
  <%= image_tag "TimeSinkSang.svg", :class => "prime-logo"  %>
  <% end %>

    <nav>

    <span class="links">
      <%= link_to "Films", main_app.films_path  %>
      <%= link_to "Blog", main_app.blog_posts_path %>
      <%= link_to "Info", main_app.info_path %>
      <%= link_to "Donate", main_app.new_donation_path  %>
    </span>


    <% if is_logged_in? %>

    <% if @current_user.avatar.present? %>

    <%= image_tag @current_user.avatar.small.url, :class => "avatar" %>

    <% else %>

 <span class="welcome">Bienvenue <%= @current_user.username %>!</span>

 <% end %>

  <%= link_to "Log out", main_app.session_path, method: :delete %>

  <%= link_to "Edit profile", main_app.edit_account_path %>

  <%= link_to "My submissions", main_app.user_submissions_path(@current_user) %>

  <%= link_to pluralize(Notification.unread_count(@current_user), 'Notification'), main_app.notifications_path %>

  <button class="button button3">
    <%= link_to "Submit film", main_app.submit_path %>
  </button>

  <% else %>

  <button class="button button1">
    <%= link_to "Sign in", new_session_path %>
  </button>

  <button class="button button2">
    <%= link_to "Submit film", submit_path %>
  </button>

      <% end %>

          </nav>
    </header>



    <% if flash[:success].present? %>
   <div class="success">
     <%= flash[:success] %>
   </div>
   <% end %>

   <% if flash[:error].present? %>
   <div class="error">
    <p><%= flash[:error] %></p>
   </div>
   <% end %>



  <main>
    <%= yield %>
  </main>

</div>


<script src="https://vjs.zencdn.net/7.8.4/video.js"></script>
<script src="barba.min.js" type="text/javascript"></script>
<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>

</body>

  </div>

<footer class="footer">

  <span>Â© 2020 TimeSink Presents</span>
  <%= link_to "Terms", main_app.terms_path %>
  <%= link_to "Cookies Policy", main_app.cookies_policy_path %>
  <%= link_to "Privacy Policy", main_app.privacy_policy_path %>

</footer>
