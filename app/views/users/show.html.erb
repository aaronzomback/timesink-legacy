
<section class="user-profile" style="height: 60vh; margin-top: 4.6em;">

<div class="" style="display: flex; justify-content: space-around; align-items: flex-start; width: 35%; margin: 0 auto">

  <div class="" style="display: inline-block;">
  <% if @user.avatar.present? %>
  <p><%= image_tag @user.avatar.show.url, :class => "avatar_large"%>
    <% else %>
    <p><%= image_tag @user.avatar.show.url, :class => "avatar_medium"%>
<% end %>
  </div>

  <div class="">
        <h5 style="display: inline-block; margin-bottom: 0.6em;"><%= @user.name %></h5>
        <div class="" style="display: flex; justify-content: space-between; align-items: center;">
          <span>@<%= @user.username %></span><span><%= @user.location %></span>
        </div>
        <p><%= @user.email %></p>
        <span>Total reputation:</span>

          <% if (@user.sum(@user.review_likes, @user.comment_likes) === 0) %>
            <%= "0" %> upvotes
          <% else %>
            <%= @user.sum(@user.review_likes, @user.comment_likes) %> upvotes

        <% end %>

          <hr style="margin-top: 2em;">
  </div>
</div>



</section>
