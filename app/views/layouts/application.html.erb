<!DOCTYPE html>
<html>
  <head>
    <title>Timesink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('Group989.png') %>
  </head>

  <body>


    <header>

        <%= link_to root_path do %>
        <%= image_tag "timesinkalt.svg", :class => "prime-logo"  %>
        <% end %>

        <nav>

          <span class="links">
            <%= link_to "Films", films_path %>
            <%= link_to "Blog", blog_posts_path  %>
            <%= link_to "Forum", forum_posts_path  %>
            <%= link_to "Info", info_path %>
            <%= link_to "Donate", donate_path %>
          </span>




        <% if is_logged_in? %>
    Welcome <%= @current_user.username %>!
  <%= link_to "Log out", session_path, method: :delete %>

  <button class="button button3">
    <%= link_to "Submit film", submissions_info_path %>
  </button>

  <% else %>

  <button class="button button1">
    <%= link_to "Sign in", new_session_path %>
  </button>

  <button class="button button2">
    <%= link_to "Create account", new_user_path %>
  </button>

      <% end %>

          </nav>
    </header>

    <% if flash[:success].present? %>
   <div class="success">
     <%= flash[:success] %>
   </div>
   <% end %>

   <% if flash[:error].present? %>
   <div class="error">
     <%= flash[:error] %>
   </div>
   <% end %>



    <main>
      <%= yield %>
    </main>

<footer>

    <span>Â© 2020 TimeSink Presents</span>
    <%= link_to "Terms", terms_path %>
    <%= link_to "Cookies Policy", cookies_policy_path %>
    <%= link_to "Privacy Policy", "privacy_policy_path" %>

</footer>

  </body>
</html>
