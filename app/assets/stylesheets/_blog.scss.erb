// Blog section intro

.blog-intro  {

  margin-left: 4em;

  h5 {
      font-family: "SangBleuOGSans";
      margin-bottom: 2px;
      letter-spacing: 3px;
      margin-left: 2rem;
  }

  p {
    margin-top: 4px;
    margin-left: 2rem;
    font-size: 10px;
    line-height: 1.5;
    font-family: 'Spectral-Light';
  }

  p.opinions {
    font-size: 8px;
  }

}

// Blog Posts as they appear in index

div.blog-index-loop ul {


  margin-top: 64px;
  margin-left: auto;
  margin-right: auto;
  width: 75%;
  box-shadow: 0px 4px 34px rgba(0, 0, 0, 0.65), inset 0 1px 0 #222222;
  padding: 24px 4px;
  border-radius: 12px;
  transition: 500ms;
  list-style: none;

   &:hover {
     transform: scale(1.01);
   }

 h1, h2, h3, h4, h5, h6 {
   font-family: "SangBleuOGSans";
   width: 100%;
 }




  li {

    transition: .3s ease-in-out;
    -webkit-transform: scale(1);
transform: scale(1);
-webkit-transition: .3s ease-in-out;

